{
  "name": "jira-validations",
  "version": "1.0.0",
  "description": "This action prints verfied 'true' or 'false' if the github event contains a valid Jira Issue ID. Action also checks DynamoDB for User lookup information. A.k.a mapping a Github ID to a Jira Account ID.",
  "main": "index.js",
  "scripts": {
    "preinstall": "bash scripts/install_githooks.sh",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint --fix .",
    "lint-staged": "lint-staged",
    "test": "mocha"
  },
  "keywords": [
    "actions",
    "jira"
  ],
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.1.1",
    "@actions/github": "^1.1.0",
    "aws-sdk": "^2.535.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "node-fetch": "^2.6.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@pollyjs/adapter-node-http": "^2.6.2",
    "@pollyjs/core": "^2.6.2",
    "@pollyjs/persister-fs": "^2.6.2",
    "@rigup/eslint-config-rigup": "^0.0.8",
    "aws-sdk-mock": "^4.5.0",
    "chai": "^4.2.0",
    "dotenv": "^8.0.0",
    "eslint": "^6.2.1",
    "jasmine": "^3.1.0",
    "lint-staged": "~8.2.0",
    "mocha": "^6.2.0",
    "pre-commit": "^1.2.2",
    "rewire": "^4.0.1",
    "sinon": "^7.4.1"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  }
